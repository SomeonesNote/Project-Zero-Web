{
  "name": "bidhub-auction-platform",
  "version": "1.0.0",
  "description": "A modern auction platform built with TypeScript, featuring component-based architecture and API integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc && concurrently \"tsc --watch\" \"npx serve . -p 8000\"",
    "start": "npx serve . -p 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "auction",
    "platform",
    "typescript",
    "component-based",
    "api",
    "modern-web",
    "responsive-design",
    "bidding-system"
  ],
  "author": "BidHub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bidhub-auction-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bidhub-auction-platform/issues"
  },
  "homepage": "https://github.com/yourusername/bidhub-auction-platform#readme",
  "files": [
    "dist",
    "README.md",
    "README-API.md",
    "README-MODULAR.md"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "serve": "^14.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
